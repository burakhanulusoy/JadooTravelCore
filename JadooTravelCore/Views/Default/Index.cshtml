    <script>
        function loadLanguage(lang){
            $.getJSON(`/locales/${lang}.json`, function(data){
                $('[data-i18n]').each(function(){
                    var key = $(this).data('i18n');
                    if(data[key]){
                        $(this).text(data[key]);
                    }
                });
                // Placeholderlar
                $('[data-i18n-placeholder]').each(function(){
                    var key = $(this).data('i18n-placeholder');
                    if(data[key]){
                        $(this).attr('placeholder', data[key]);
                    }
                });
            });
        }

        // Dropdown tıklama
        $('[data-lang]').click(function(e){
            e.preventDefault();
            var lang = $(this).data('lang').toLowerCase();
            loadLanguage(lang);
            $('#navbarDropdown').text($(this).text()); // üstte seçilen dil göster
        });

        // Sayfa açıldığında varsayılan dil
        $(document).ready(function(){
            loadLanguage('tr'); // default Türkçe
        });
    </script>




  
