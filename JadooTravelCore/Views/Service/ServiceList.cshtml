@model List<ResultServiceDto>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1 class="mb-4 text-dark">Hizmetlerimiz</h1>

<div class="container">

    <table class="table table-hover align-middle text-center shadow-sm rounded-3" style="background-color:#f8f9fa;">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Kart Başlığı</th>
                <th>Kart Açıklaması</th>
                <th>Kart Fotoğrafı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td class="fw-bold text-primary">@item.CardTitle</td>
                    <td class="text-secondary">@item.CardDescription</td>
                    <td>
                        <img src="@item.CardImgUrl" style="width:150px; height:100px; object-fit:cover; border-radius:5px;" alt="Service Image" />
                    </td>
                    <td>
                        <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger btn-sm delete-btn">
                            <i class="ti ti-trash"></i> Sil
                        </a>
                    </td>
                    <td>
                        <a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-primary btn-sm">
                            <i class="ti ti-pencil"></i> Güncelle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Service/CreateService" class="btn btn-success mt-3 shadow-sm">
        <i class="ti ti-plus"></i> Yeni Servis Ekle
    </a>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const url = this.href;

                    Swal.fire({
                        title: 'Silmek istediğinize emin misiniz?',
                        text: "Bu işlemi geri alamazsınız!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Evet, sil!',
                        cancelButtonText: 'Hayır'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = url;
                        }
                    });
                });
            });
        });
    </script>
}
